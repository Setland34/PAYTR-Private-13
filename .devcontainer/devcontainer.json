{
  "name": "Paytr Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:ubuntu",
  "extensions": [
    "JuanBlanco.solidity", // Solidity support
    "eamodio.gitlens", // GitLens for Git support
    "esbenp.prettier-vscode", // Prettier for code formatting
    "dbaeumer.vscode-eslint", // ESLint for linting
    "ms-vscode.vscode-typescript-tslint-plugin", // TypeScript TSLint plugin
    "ms-python.python", // Python support
    "ms-vscode.cpptools", // C++ support
    "ms-vscode.go", // Go support
    "ms-azuretools.vscode-docker", // Docker support
    "redhat.vscode-yaml" // YAML support
  ],
  "postCreateCommand": "forge install && forge build && npm install && forge test --fork-url https://sepolia.infura.io/v3/YOURKEY",
  "tasks": {
    "launch": "forge create src/Paytr.sol:Paytr --rpc-url https://sepolia.infura.io/v3/YOURKEY --private-key YOUR_PRIVATE_KEY",
    "lint": "npx eslint .",
    "format": "npx prettier --write .",
    "deploy": "forge script src/Paytr.s.sol:PaytrScript --rpc-url https://sepolia.infura.io/v3/YOURKEY --private-key YOUR_PRIVATE_KEY",
    "test": "forge install && forge test --fork-url https://sepolia.infura.io/v3/YOURKEY",
    "build": "forge install",
    "integration-test": "forge test --fork-url https://sepolia.infura.io/v3/YOURKEY", // Run integration tests
    "generate-docs": "npx typedoc --out docs src", // Generate documentation
    "clean": "forge clean" // Clean up build artifacts
  }
}
